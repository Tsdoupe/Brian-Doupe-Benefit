body {
    font-family: "Open Sans", sans-serif;
    background-color: rgb(200, 204, 168);
    position: relative;
    min-height: 100vh;
}

h1, h2, h3 {
    font-family: "Stardos Stencil", cursive;
}

h2 {
    color: black;
}

header h2 {
    color: #CEC8FF;
}

.site-footer {
    background-color: black;
    bottom: 0;
    width: 100%;
    position: absolute;
}

.jumbotron {
    margin: 0;
    padding: 60px;
    background-image: linear-gradient(to right,black, gray);
    color: rgb(33, 209, 33);
}

.row-content {
    padding: 65px 0;
    border-bottom: 1px ridge;
    min-height: 200px;
}

.navbar-dark {
    background-color:rgb(2, 85, 2)
}

#estimateModal .modal-header {
    background-color: rgb(2, 85, 2);
    color: white; 
}

.carousel {
    margin: 0; 
}

.carousel-caption {
    background-color: rgba(0, 0, 0, 0.5); 
}

.carousel-item img {
    width: 100%;
    max-height: 500px;
}

a, a:hover {
    color: inherit;
    text-decoration: none;
}

.gallery-wrap {
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 30vh;
  }
  
  .item {
    flex: 1;
    height: 100%;
    background-position: center;
    background-size: cover;
    background-repeat: none;
    transition: flex 0.8s ease;
  }
    &:hover{
      flex: 7;
    }
    
.windows {
    background-image: url('img/Services/windows.jpeg');
}
